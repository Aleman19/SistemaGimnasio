@page "/Entrenador/GenerateInvoices"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using SistemaGimnasioV2.Data
@using SistemaGimnasioV2.Models
@inject GymDbContext DbContext
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<h3>Generar y Visualizar Facturas</h3>

@if (isLoading)
{
    <div class="alert alert-info">Cargando datos...</div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (invoices.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario ID</th>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in invoices)
            {
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.UserId</td>
                    <td>@invoice.Date.ToString("dd/MM/yyyy")</td>
                    <td>@invoice.Amount.ToString("C")</td>
                    <td>@invoice.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No se encontraron facturas en la base de datos.</div>
}

@code {
    private List<Invoice> invoices = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Cargar todos los datos de la tabla Invoices desde la DB
            invoices = await DbContext.Invoices.ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar los datos: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
